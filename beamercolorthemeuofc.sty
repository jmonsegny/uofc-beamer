\mode<presentation>

% Colors
\definecolor{yellowuofc}{rgb}{1.0000, 0.7647, 0.1921}
\definecolor{reduofc}{rgb}{0.8627, 0.2823, 0.2156}

% Settings
% Bold theme
\setbeamercolor*{boldtitle}{fg=white}
\setbeamercolor*{boldauthor}{fg=yellowuofc}
\setbeamercolor*{bolddate}{fg=yellowuofc}
\setbeamercolor*{boldframetitle}{fg=white}

% Flourish theme
\setbeamercolor*{flourishtitle}{fg=reduofc}
\setbeamercolor*{flourishauthor}{fg=black}
\setbeamercolor*{flourishdate}{fg=black}
\setbeamercolor*{flourishframetitle}{fg=reduofc}

% Simple theme
\setbeamercolor*{simpletitle}{fg=white}
\setbeamercolor*{simpleauthor}{fg=yellowuofc}
\setbeamercolor*{simpledate}{fg=yellowuofc}
\setbeamercolor*{simpleframetitle}{fg=reduofc}

% Conservative theme
\setbeamercolor*{conservativetitle}{fg=reduofc}
\setbeamercolor*{conservativeauthor}{fg=black}
\setbeamercolor*{conservativedate}{fg=yellowuofc}
\setbeamercolor*{conservativeframetitle}{fg=reduofc}

\mode<all>
