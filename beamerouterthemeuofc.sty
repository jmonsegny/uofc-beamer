\mode<presentation>

% Options
\DeclareOptionBeamer{miniframes}{\def\beamer@uofc@miniframes{#1}}    
\ProcessOptionsBeamer

% Frame title
\defbeamertemplate*{frametitle}{uofc}[1][]
{    
    \ifx\beamer@uofc@miniframes\@empty% Insert navigation above title
        \vskip-0.3cm%
        \begin{beamercolorbox}[wd=\paperwidth]{}
            \usebeamerfont{nav}\insertnavigation{\paperwidth}%
        \end{beamercolorbox}         
        \begin{beamercolorbox}[wd=\textwidth,leftskip=0.1cm,#1]{\beamer@uofc@style frametitle}
        \usebeamerfont{frametitle}\insertframetitle%
        \end{beamercolorbox}
    \else% Only title
        \vskip0.3cm%
        \begin{beamercolorbox}[wd=\textwidth,leftskip=0.1cm,#1]{\beamer@uofc@style frametitle}
            \usebeamerfont{frametitle}\insertframetitle%
        \end{beamercolorbox}
    \fi
}

\mode<all>
